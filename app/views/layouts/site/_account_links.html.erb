<% if user_signed_in? %>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle bg-transparent border-0 shadow-none text-black" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.email %>
        </button>
        <ul class="dropdown-menu">
            <li>
                <%= link_to 'Edit User', edit_user_registration_path, :class => "dropdown-item" %>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <%= button_to 'Sign out', destroy_user_session_path, method: :delete, :class => "dropdown-item" %>
            </li>
        </ul>
    </div>
<% else %>
    <%= link_to 'Sign in', new_user_session_path, :class => "btn btn-dark btn-sm px-3 me-2" %>
    <%= link_to 'Sign up', new_user_registration_path, :class => "btn btn-outline-dark btn-sm px-3" %>
<% end %>
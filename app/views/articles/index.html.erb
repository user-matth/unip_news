
<%= render_if @highlights[0].present?, 'longer_featured', article: @highlights[0] %>

<div class="row mb-2">
    <%= render_if @highlights[1].present?, 'medium_featured', article: @highlights[1] %>
    <%= render_if @highlights[2].present?, 'medium_featured', article: @highlights[2] %>
</div>

<div class="row g-5">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="pb-4 mb-4 border-bottom serif">
                Últimas Notícias
            </h3>
            <%= link_to "Novo Artigo", new_article_path, :class => 'btn btn-outline-dark rounded-0 btn-sm px-3' if user_signed_in? %>
        </div>
        <%= render @articles %>
        <%= render 'pagination' %>
    </div>
    <%= render 'right_side' %>
</div>

<%= content_for :category_filter do %>
    <div class="nav-scroller container py-1 mb-2 ">
        <nav class="nav d-flex justify-content-between">
            <% @categories.each do |category| %>
                <%= link_to category.name, root_path(category: category.name), class: "p-2 px-3 text-black text-decoration-none #{'fw-bold' if category.name.to_s == params[:category]}" %>
            <% end %>
        </nav>
    </div>
<% end %>